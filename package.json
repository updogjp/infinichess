{
  "name": "infinichess",
  "version": "1.0.0",
  "description": "Massively multiplayer infinite chess game - a fork of Xess/10kchess",
  "main": "server/index.js",
  "scripts": {
    "start": "node ./server/index.js",
    "dev": "nodemon ./server/index.js --watch server --watch shared --watch client",
    "build": "node --check server/index.js && echo 'Build successful'",
    "clean": "rm -f server/*.dat"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "keywords": [
    "chess",
    "multiplayer",
    "websocket",
    "game",
    "infinite"
  ],
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "uWebSockets.js": "https://github.com/uNetworking/uWebSockets.js/archive/refs/tags/v20.51.0.tar.gz"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
